<div class="results">
  <h2>Results for <%= @query.camelcase %> (<%= @results.count %>)</h2>
  <table border="1" class="col-md-offset-3 col-xs-offset-3">
    <thead>
      <tr>
        <th>Thumbnail</th>
        <th>Title</th>
        <th>Social Rank</th></tr>
    </thead>
    <tbody>
      <% @results.each do |r| %>
      <tr class=<%= cycle('even', 'odd') %>>
        <td><%= link_to (image_tag r["image_url"], alt: r["title"], width: 100, height: 100),  r["source_url"] %></td>
        <td><%= link_to (sanitize r["title"]), r["source_url"] %></td>
        <td><%= sprintf '%.2f', r["social_rank"] %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>
